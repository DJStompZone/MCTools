@using MCTools.Models

@if (Pack is { Overlays: { } } && Pack.Overlays.Any())
{
	<MudItem xs="12" Class="pa-2 my-1">
		<MudText Typo="Typo.h6" GutterBottom="true">Overlays</MudText>
		<MudGrid Justify="Justify.SpaceEvenly" Spacing="2" Class="mx-10">
			@foreach (Assets overlay in Pack.Overlays)
			{
				<MudItem Class="my-1" xs="4">
					<MudTooltip Text="@($"Include '{overlay.Name}' when comparing textures")" Placement="Placement.Bottom">
						<MudSwitch @bind-Checked="overlay.Enabled" Label="@($"Include '{overlay.Name}'")" Color="Color.Primary" Disabled="IsProcessing" />
					</MudTooltip>
				</MudItem>
			}
		</MudGrid>
	</MudItem>
	<MudText Typo="Typo.caption" Align="Align.Center" GutterBottom="true" Class="mt-1">Note: Versions older than 1.20.2 (23w31a) don't support overlays! It's recommended to turn ALL overlays off for older versions.</MudText>
}

@code
{
	[Parameter] public ResourcePack Pack { get; set; }
	[Parameter] public bool IsProcessing { get; set; }
}
